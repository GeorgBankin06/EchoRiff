<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:rippleColor="@color/grey"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/radio_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/radio_name_ph"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            tools:src="@drawable/border_with_radius" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/radio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@string/radio_name_ph" />

            <TextView
                android:id="@+id/radio_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#626161"
                android:textSize="14sp"
                tools:text="Some radio description" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>