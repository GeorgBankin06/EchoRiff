<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="start"
    android:orientation="horizontal"
    android:padding="5dp"
    app:cardBackgroundColor="@android:color/transparent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/radio_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/radio_name_ph"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        tools:src="@drawable/border_with_radius" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/radio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/radio_name_ph" />

        <TextView
            android:id="@+id/radio_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="#626161"
            android:textSize="14sp"
            tools:text="adasdddadaa" />
    </LinearLayout>
</LinearLayout>